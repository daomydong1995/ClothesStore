@model ClothesStore.Models.PRODUCT
<div class="form-horizontal">
    <h4>PRODUCT</h4>
    <hr />
    <input type="text" id="idPro" style="display:none" />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.namePro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" id="namePro" class="form-control" />
            @Html.ValidationMessageFor(model => model.namePro, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.detailsPro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <textarea name="detailsPro" id="detailsPro" class="form-control"></textarea>
            @Html.ValidationMessageFor(model => model.detailsPro, "", new { @class = "text-danger" })
        </div>
        <script type="text/javascript">
                            CKEDITOR.replace("detailsPro")
        </script>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.amountPro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" id="amountPro" class="form-control" />
            @Html.ValidationMessageFor(model => model.amountPro, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.coverPro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            <input type="text" id="coverPro" class="form-control" />
            @Html.ValidationMessageFor(model => model.coverPro, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-2">
            <input type="button" id="browse" value="..." class="btn btn-default" />
        </div>
        <script type="text/javascript">
                            $("#browse").click(function () {
                                var finder = new CKFinder();
                                finder.selectActionFunction = function (fileUrl) {
                                    $("#coverPro").val(fileUrl);
                                };
                                finder.popup();
                            });
        </script>

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.pricePro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" id="pricePro" class="form-control" />
            @Html.ValidationMessageFor(model => model.pricePro, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.percentSalePro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" id="percentSalePro" class="form-control" />
            @Html.ValidationMessageFor(model => model.percentSalePro, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.hotProduct, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                <input type="text" id="hotProduct" class="form-control" />
                @Html.ValidationMessageFor(model => model.hotProduct, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CATEGORY_idCate, "CATEGORY_idCate", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.DropDownList("CATEGORY_idCate", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CATEGORY_idCate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PARTNER_idPart, "PARTNER_idPart", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("PARTNER_idPart", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PARTNER_idPart, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add()">Thêm</button>
            <button type="button" class="btn btn-success" id="btnUpdate" style="display:none" onclick="return Update()">Thay đổi</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>